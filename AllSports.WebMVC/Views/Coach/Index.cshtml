@model IEnumerable<AllSports.Models.CoachModels.CoachListItem>

@{
    ViewBag.Title = "Index";
}

<h2>All Coaches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoachId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CoachId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CoachId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CoachId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CoachId })
            </td>
        </tr>
    }

</table>
